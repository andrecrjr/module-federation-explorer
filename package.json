{
    "name": "module-federation-explorer",
    "displayName": "Module Federation Explorer",
    "description": "Explore and manage Module Federation remotes in VS Code",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/webpack.config.js",
        "workspaceContains:**/vite.config.js"
    ],
    "main": "./out/index.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "moduleFederation",
                    "name": "Module Federation"
                }
            ]
        },
        "commands": [
            {
                "command": "moduleFederation.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "moduleFederation.startApp",
                "title": "Start MFE App",
                "icon": "$(play)"
            },
            {
                "command": "moduleFederation.stopApp",
                "title": "Stop MFE App",
                "icon": "$(stop)"
            },
            {
                "command": "moduleFederation.startRemote",
                "title": "Start Remote"
            },
            {
                "command": "moduleFederation.configureStartCommand",
                "title": "Configure Start Command"
            },
            {
                "command": "moduleFederation.showWelcome",
                "title": "Show Welcome"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "moduleFederation.refresh",
                    "when": "view == moduleFederation",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "moduleFederation.startApp",
                    "when": "view == moduleFederation && viewItem == moduleFederationStatus",
                    "group": "inline"
                },
                {
                    "command": "moduleFederation.stopApp",
                    "when": "view == moduleFederation && viewItem == moduleFederationStatusRunning",
                    "group": "inline"
                },
                {
                    "command": "moduleFederation.startRemote",
                    "when": "view == moduleFederation && viewItem == remote",
                    "group": "inline"
                },
                {
                    "command": "moduleFederation.configureStartCommand",
                    "when": "view == moduleFederation && viewItem == remote"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "@typescript-eslint/parser": "^8.27.0",
        "esprima": "^4.0.1",
        "estraverse": "^5.3.0"
    },
    "devDependencies": {
        "@types/esprima": "^4.0.3",
        "@types/estraverse": "^5.1.3",
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.1.3"
    }
}